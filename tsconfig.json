{
  "compilerOptions": {
    "target": "ES2022",                                
    "module": "NodeNext", 
    "moduleResolution": "NodeNext",                             
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": ["es2023"],                       
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                    
    "skipLibCheck": true                               
  },
  "include": ["src/**/*"],
  "watchOptions": {
    "excludeDirectories": ["node_modules"]
  }
}
